<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTextButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorWhite</item>
        <item name="counterTextColor">@color/colorWhite</item>
        <item name="hintTextColor">@color/colorWhite</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="passwordToggleTint">@color/colorWhite</item>
    </style>

    <style name="TextFieldListPassword" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorWhite</item>
        <item name="counterTextColor">@color/colorWhite</item>
        <item name="hintTextColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="passwordToggleTint">@color/colorPrimaryDark</item>
    </style>

</resources>
